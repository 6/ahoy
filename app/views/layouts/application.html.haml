!!!
%html
  %head
    %meta{:charset => "utf-8"}
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}
    %title Bananaphone
    %link{href: "//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css",  rel: "stylesheet"}
    %link{rel: "stylesheet", href: "//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css"}
    %script{src: "//ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"}
    %script{src: "//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"}
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body
    - if current_user
      %nav.navbar.navbar-inverse
        .container
          .navbar-header
            %button.navbar-toggle.collapsed{type: "button", data: {toggle: "collapse", target: "#navbar"}}
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            = link_to "Bananaphone", root_path, class: "navbar-brand"
          %ul.nav.navbar-nav
            %li.dropdown
              %a.dropdown-toggle{href: "#", data: {toggle: "dropdown"}}
                Organizations
                %span.caret
              %ul.dropdown-menu
                - current_user.organizations.each do |organization|
                  %li= link_to organization.name, organization_path(organization)
                %li.divider
                %li= link_to "+ New organization", new_organization_path

          #navbar.collapse.navbar-collapse
            %ul.nav.navbar-nav.navbar-right
              %li= link_to "Settings", edit_user_path
              %li= link_to "Log out", destroy_session_path
    .container
      - flash.each do |name, msg|
        = content_tag :div, class: "alert alert-#{name == :error ? "warning" : "success" } alert-dismissable" do
          = msg
      = yield
